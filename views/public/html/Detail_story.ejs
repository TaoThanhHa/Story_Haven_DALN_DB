<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết truyện</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="../css/detail_story.css">
    <link rel="stylesheet" href="../css/header.css">
</head>
<body>
    <%- include('header.ejs', { user: typeof user !== 'undefined' ? user : null }) %>


    <!-- Thông tin truyện -->
    <div class="story">
        <div class="story-bg">
        <div class="container">
            <div class="row">
            <div class="col-md-4 cover-photo">
                <img src="../images/placeholder.jpg" alt="Cover Photo">
            </div>
            <div class="col-md-8 story-infor">
                <h1 class="story-name"></h1>
                <ul class="list-unstyled">
                <li>Tác giả:</li>
                <li>Thể loại:</li>
                </ul>
                <p class="story-description"></p>
                <div class="d-flex align-items-center">
                <div class="interaction-container">
                    <i class="fas fa-eye"></i> <span id="views">0</span>
                </div>
                <div class="interaction-container">
                    <i class="fas fa-star"></i> <span id="votes">0</span>
                </div>
                </div>
                <div class="mt-3">
                <a href="#" class="btn btn-read">Đọc từ chương 1</a>
                <button id="followBtn" class="btn btn-outline-danger">
                  <i class="fas fa-heart"></i> Theo dõi
                </button>
                </div>
            </div>
            </div>
        </div>
        </div>
    </div>

        <!-- Danh sách chương -->
    <div class="container chapter-list">
        <h2>Các chương truyện</h2>
        <div class="list-group" id="chapterList"></div>

        <!-- Pagination -->
        <nav>
        <ul class="pagination justify-content-center mt-3" id="chapterPagination"></ul>
        </nav>
    </div>


  <!-- Footer -->
  <footer class="bg-light py-5 mt-5 border-top">
    <div class="container">
      <p class="text-center">© 2024 Story Haven</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="../javascript/detail_story.js"></script>
  <script src="../javascript/search_result.js"></script>
  <script src="../javascript/Category.js"></script>
</body>
</html>
