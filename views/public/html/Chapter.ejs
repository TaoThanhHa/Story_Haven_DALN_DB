<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chapter</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/Chapter.css" type="text/css">
</head>
<body>
  <!-- Header -->
  <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top px-3">
    <a class="navbar-brand d-flex align-items-center" href="/">
      <img src="/images/Story Haven.png" alt="" width="40" class="me-2">
      <div class="story-name"><a href="#"></a></div>
    </a>
    <div class="ms-auto">
      <button id="Vote" class="btn btn-outline-warning">
        <i class="fas fa-star"></i>
      </button>
    </div>
  </nav>

  <!-- Nội dung -->
  <div class="container mt-5 pt-5">
    <div class="box-infor">
      <h2 class="tieu-de text-center mb-4"></h2>

      <div class="d-flex justify-content-center border-bottom pb-3 mb-3">
        <div class="me-4 text-muted">
          <i class="fas fa-eye me-1"></i><span id="viewCount">0</span>
        </div>
        <div class="text-muted">
          <i class="fas fa-star me-1"></i><span id="voteCount">0</span>
        </div>
      </div>

      <div class="noi-dung fs-6 lh-lg"></div>
    </div>

    <!-- Điều khiển -->
    <div class="d-flex justify-content-between my-4">
      <button onclick="backChapter()" class="btn btn-outline-dark">
        <i class="fas fa-arrow-left me-1"></i> Chương trước
      </button>
      <button onclick="nextChapter()" class="btn btn-outline-dark">
        Chương sau <i class="fas fa-arrow-right ms-1"></i>
      </button>
    </div>
  </div>

  <!-- Menu chương -->
  <div class="menu">
    <i class="fa fa-bars"></i>
    <div class="chap">
      <div class="box-chap list-group list-group-flush"></div>
    </div>
  </div>

  <!-- Bình luận -->
  <div class="container my-5">
    <h4 class="fw-bold mb-3">Bình luận</h4>
    <div class="box-cmt">
      <form id="commentForm" class="row g-2 mb-3">
        <div class="col-10">
          <textarea id="commentInput" class="form-control" placeholder="Nhập bình luận của bạn..." required></textarea>
        </div>
        <div class="col-2 d-grid">
          <button type="submit" class="btn btn-success">
            <i class="fas fa-paper-plane"></i>
          </button>
        </div>
      </form>

      <div id="commentsList">
        <h5 class="mb-3">Các bình luận:</h5>
        <ul id="comments" class="list-group"></ul>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/javascript/Chapter.js"></script>
</body>
</html>
