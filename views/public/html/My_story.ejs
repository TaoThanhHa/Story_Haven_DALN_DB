<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Truyện của tôi</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="../css/My_story.css">
  <link rel="stylesheet" href="../css/header.css">
</head>
<body>

  <%- include('header.ejs', { user }) %>

  <div class="container my-box">

    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1>Truyện của tôi</h1>
      <div class="d-flex">
        <input type="text" id="searchMyStory" class="me-2 search-box" placeholder="Tìm truyện">
        <a href="/story/new" class="btn btn-success fw-bold">+ Truyện mới</a>
      </div>
    </div>

    <!-- TAB -->
    <div class="words mb-4">
      <span class="word selected" id="tab-draft">Bản thảo</span>
      <span class="word" id="tab-published">Đã đăng tải</span>
    </div>

    <!-- BOX -->
    <div class="box" id="storyContainer">
      <!-- Story list render tại đây -->
    </div>

  </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../javascript/My_story.js"></script>
    <script src="../javascript/Category.js"></script>
    <script src="../javascript/search_result.js"></script>
</body>
</html>
