<div class="container-fluid mt-4">
    <h2 class="mb-4">Quản lý Truyện</h2>

    <!-- Thanh tìm kiếm và lọc -->
    <div class="row mb-3">
        <!-- Tìm kiếm -->
        <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="form-group">
                <label for="story-search-input">Tìm kiếm:</label>
                <input type="text" id="story-search-input" class="form-control" placeholder="Tìm theo tiêu đề hoặc tác giả">
            </div>
        </div>

        <!-- Lọc trạng thái hiển thị -->
        <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="form-group">
                <label for="story-visibility-filter">Trạng thái hiển thị:</label>
                <select id="story-visibility-filter" class="form-control">
                    <option value="">Tất cả</option>
                    <option value="public">Công khai</option>
                    <option value="hidden">Ẩn truyện</option>
                </select>
            </div>
        </div>

        <!-- Lọc thể loại -->
        <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="form-group">
                <label for="story-category-filter">Thể loại:</label>
                <select id="story-category-filter" class="form-control">
                </select>
            </div>
        </div>

        <!-- Nút tìm kiếm -->
        <div class="col-xs-12 col-sm-6 col-md-2">
            <div class="form-group d-flex align-items-end" style="height: 100%;">
                <button class="btn btn-primary btn-block mt-auto" onclick="searchAndFilterStories()">Tìm kiếm</button>
            </div>
        </div>
    </div>

    <!-- Bảng danh sách truyện -->
    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Ảnh bìa</th>
                    <th>Tiêu đề</th>
                    <th>Tác giả</th>
                    <th>Thể loại</th>
                    <th>Trạng thái viết</th>
                    <th>Trạng thái hiển thị</th>
                    <th>Số chương</th>
                    <th>Ngày tạo</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody id="story-table-body">
                <tr><td colspan="10">Đang tải truyện...</td></tr>
            </tbody>
        </table>
    </div>

    <!-- Phân trang -->
    <div id="story-pagination" class="mt-3 d-flex justify-content-center"></div>

    <!-- Modal chi tiết truyện -->
    <div class="modal fade" id="storyModal" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Chi tiết Truyện</h5>
                    <button class="close" onclick="hideModal('storyModal')">&times;</button>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="modalStoryId">

                    <div class="form-group">
                        <label>Tiêu đề:</label>
                        <input type="text" id="modalStoryTitle" class="form-control" readonly>
                    </div>

                    <div class="form-group">
                        <label>Tác giả:</label>
                        <input type="text" id="modalAuthorUsername" class="form-control" readonly>
                    </div>

                    <div class="form-group">
                        <label>Mô tả:</label>
                        <textarea id="modalDescription" class="form-control" rows="4" readonly></textarea>
                    </div>

                    <div class="form-group">
                        <label>Ảnh bìa:</label><br>
                        <img id="modalThumbnailImg" src="" class="img-fluid mb-2" style="max-height:150px;">
                        <input type="text" id="modalThumbnail" class="form-control" readonly>
                    </div>

                    <div class="form-group">
                        <label>Thể loại:</label>
                        <select id="modalCategory" class="form-control">
                            <option value="">Chọn thể loại</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Trạng thái viết:</label>
                        <select id="modalStatus" class="form-control">
                            <option value="writing">Đang viết</option>
                            <option value="completed">Hoàn thành</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Trạng thái hiển thị:</label>
                        <select id="modalVisibility" class="form-control">
                            <option value="public">Công khai</option>
                            <option value="hidden">Ẩn truyện</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Ngày tạo:</label>
                        <input type="text" id="modalCreatedAt" class="form-control" readonly>
                    </div>

                    <h6 class="mt-4">Danh sách chương</h6>
                    <div class="table-responsive">
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>Chương số</th>
                                    <th>Tiêu đề</th>
                                    <th>Ngày tạo</th>
                                </tr>
                            </thead>
                            <tbody id="modalChaptersList"></tbody>
                        </table>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" onclick="hideModal('storyModal')">Đóng</button>
                    <button class="btn btn-warning" id="saveStoryChangesBtn">Lưu thay đổi</button>
                    <button class="btn btn-danger" id="deleteStoryBtn">Xóa truyện</button>
                </div>

            </div>
        </div>
    </div>

</div>